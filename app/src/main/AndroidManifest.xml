<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mybooklibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyBookLibrary">
        <activity
            android:name=".Controller.website"
            android:exported="false" />
        <activity
            android:name=".Controller.AboutActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.CurrentlyReadingBookActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.FavoriteActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.WantToReadActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.AlreadyReadBooksActivity"
            android:exported="false" />
        <activity
            android:name=".AlreadyReadBookActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.AlreadyReadBooksActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.BookActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.AllBooksActivity"
            android:exported="false" />
        <activity
            android:name=".Controller.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>